import socket

def main():
    while True:
        #create ng socket object
        Client_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
        #ip address para iconnect sa server
        Client_socket.connect(('192.168.1.15', 8888))

        name = input("Enter your name: ")
        while True:
            Difficulty = input("Choose difficulty (easy, medium, hard): ").lower()
            if Difficulty in ['easy', 'medium', 'hard']:
                if Difficulty == 'easy':
                    Difficulty_num = 50
                elif Difficulty == 'medium':
                    Difficulty_num = 100
                elif Difficulty == 'hard':
                    Difficulty_num = 500
                break
            else:
                print("Invalid difficulty choice. Please choose from easy, medium, or hard.")
         #to send the name of users and difficulty sa server      
        Client_socket.send(f"{name},{Difficulty_num}".encode())
        #looping the uesers guess
        while True:
            Guess = input("Enter your guess: ")
            if Guess.isdigit():
                Client_socket.send(Guess.encode())
                response = Client_socket.recv(1024).decode()
                print(response)
                if "Congratulations" in response:
                    break
            else:
                print("Invalid input. Please enter a number.")
    
        Play_again = input("Do you want to play again? (yes/no): ").lower()
        if Play_again != 'yes':
            break
        Client_socket.close()
if __name__ == "__main__":
    main()
